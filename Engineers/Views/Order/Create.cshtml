@model Engineers.ViewModels.CreateOrderViewModel
@{
    ViewBag.Title = "Добавление заказа";
}
<form class="form-signin" method="post" asp-action="Create" asp-controller="Order" enctype="multipart/form-data">
    <h2 class="form-signin-heading">Создание заказа</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <input class="form-control top" placeholder="Название" type="text" asp-for="Name">
    <span asp-validation-for="Name"></span>
    <input class="form-control bottom " placeholder="Описание" type="text" asp-for="Description">
    <span asp-validation-for="Description"></span>
    <input class="form-control top" placeholder="Цена" type="number" asp-for="Cost">
    <span asp-validation-for="Cost"></span>
    <input class="form-control top" placeholder="Адресс" type="text" asp-for="Address">
    <span asp-validation-for="Address"></span>
    <input class="form-control top" placeholder="Имя пользователя" type="text" asp-for="UserName">
    <span asp-validation-for="UserName"></span>
    <input type="file" name="files" /><br>
    <input type="file" name="files" /><br>
    <input type="file" name="files" /><br>
    <button class="btn btn-primary btn-block" type="submit">Добавить</button>
</form>