@model Engineers.ViewModels.EditOrderViewModel
@{
    ViewBag.Title = "Редактирование задания";
}
<table class="table">
        <tr>
            <td>
                <img src="~/@Model.Images[0]" class="rounded-lg" height="60" width="80" asp-append-version="true" />
            </td>
            <td>@Model.Name</td>
            <td>@Model.Address</td>
            <td>@Model.Cost</td>
            <td>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
</table>
<form method="post" asp-action="Edit" asp-controller="Order" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Цена</label>
        <input type="text" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Адресс</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label">Состояние заказа</label>
        <input type="number" asp-for="State" class="form-control" max="2" min="0"/>
    </div>
    <div class="form-group">
        <label asp-for="Updated_at" class="control-label">Последнее обновление</label>
        <input type="datetime" asp-for="Updated_at" class="form-control" />
    </div>
    <div class="form-group">
        @foreach (var item in Model.Images)
        {
            <img src="~/@item" class="rounded-lg" height="120" width="200" asp-append-version="true" />
        }
    </div>
    <div class="form-group">
        <label class="control-label">Пути к картинкам</label>
        @foreach (var item in Model.Images)
        {
            <input type="text" asp-for="@item" class="form-control" />
        }
    </div>
    Загрузка новых фото
    <div class="form-group">
        <input type="file" name="files" /><br>
        <input type="file" name="files" /><br>
        <input type="file" name="files" /><br>
    </div>
    <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
</form>